<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/friends_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="3dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.ToolBarStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/friends_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="聯絡人"
            android:textColor="@color/colorAlmostBlack"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/friends_searchbar"
        style="@style/searchBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/friends_toolbar"
        app:layout_constraintBottom_toTopOf="@id/friendsView" />

    <ImageView
        android:id="@+id/friends_searchbar_icon"
        style="@style/searchIcon"
        app:layout_constraintStart_toStartOf="@id/friends_searchbar"
        app:layout_constraintTop_toTopOf="@id/friends_searchbar"
        app:layout_constraintBottom_toBottomOf="@id/friends_searchbar" />

    <TextView
        android:id="@+id/friends_searchbar_text"
        style="@style/searchText"
        app:layout_constraintStart_toStartOf="@id/friends_searchbar_icon"
        app:layout_constraintTop_toTopOf="@id/friends_searchbar_icon"
        app:layout_constraintBottom_toBottomOf="@id/friends_searchbar_icon" />

    <ImageView
        android:id="@+id/friends_searchbar_icon_cancel"
        style="@style/searchIcon_cancel"
        app:layout_constraintEnd_toEndOf="@id/friends_searchbar"
        app:layout_constraintTop_toTopOf="@id/friends_searchbar"
        app:layout_constraintBottom_toBottomOf="@id/friends_searchbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friendsView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/friends_searchbar"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="10dp"
        app:itemBackground="?android:attr/windowBackground"
        app:itemIconTint="@color/selector"
        app:itemTextColor="@color/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/friendsView"
        app:menu="@menu/menu_navigation"
        tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>