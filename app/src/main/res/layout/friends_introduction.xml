<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/friendsProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="52dp"
        android:text="好友簡歷"
        android:textColor="@color/colorAlmostBlack"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/friendsProfile">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/editFriendsProfileButton"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="備註好友資訊"
                android:textColor="#2196F3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/friends_name"
                app:layout_constraintTop_toBottomOf="@+id/friends_name" />

            <ImageView
                android:id="@+id/friends_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="@+id/editFriendsProfileButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/friends_name"
                app:srcCompat="@drawable/avatar" />

            <TextView
                android:id="@+id/friends_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="40dp"
                android:textColor="@color/colorAlmostBlack"
                android:textSize="23sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_friendsProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="職業"
                android:textColor="@color/colorLabelGray"
                app:layout_constraintStart_toStartOf="@+id/editFriendsProfileButton"
                app:layout_constraintTop_toBottomOf="@+id/editFriendsProfileButton"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/friends_profession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="@color/colorAlmostBlack"
                app:layout_constraintStart_toStartOf="@+id/label_friendsProfile"
                app:layout_constraintTop_toBottomOf="@+id/label_friendsProfile" />

            <TextView
                android:id="@+id/label_friends_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="性別"
                android:textColor="@color/colorLabelGray"
                app:layout_constraintStart_toStartOf="@+id/friends_profession"
                app:layout_constraintTop_toBottomOf="@+id/friends_profession"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/friends_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="@color/colorAlmostBlack"
                app:layout_constraintStart_toStartOf="@+id/label_friends_gender"
                app:layout_constraintTop_toBottomOf="@+id/label_friends_gender" />

            <TextView
                android:id="@+id/label_friends_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="信箱"
                android:textColor="@color/colorLabelGray"
                app:layout_constraintStart_toStartOf="@+id/friends_gender"
                app:layout_constraintTop_toBottomOf="@+id/friends_gender"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/friends_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="@color/colorAlmostBlack"
                app:layout_constraintStart_toStartOf="@+id/label_friends_mail"
                app:layout_constraintTop_toBottomOf="@+id/label_friends_mail" />

            <TextView
                android:id="@+id/label_friends_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="電話"
                android:textColor="@color/colorLabelGray"
                app:layout_constraintStart_toStartOf="@+id/friends_mail"
                app:layout_constraintTop_toBottomOf="@+id/friends_mail"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/friends_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="@color/colorAlmostBlack"
                app:layout_constraintStart_toStartOf="@+id/label_friends_tel"
                app:layout_constraintTop_toBottomOf="@+id/label_friends_tel" />

            <TextView
                android:id="@+id/label_friends_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="備忘錄"
                android:textColor="@color/colorLabelGray"
                app:layout_constraintStart_toStartOf="@+id/friends_tel"
                app:layout_constraintTop_toBottomOf="@+id/friends_tel"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/friends_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="@color/colorAlmostBlack"
                app:layout_constraintStart_toStartOf="@+id/label_friends_memo"
                app:layout_constraintTop_toBottomOf="@+id/label_friends_memo" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@id/bottom_navigation"
        android:background="@drawable/bottom_navigation_shadow"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="?android:attr/windowBackground"
        app:itemIconTint="@color/selector"
        app:itemTextColor="@color/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_navigation"
        tools:layout_editor_absoluteX="0dp">

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>
