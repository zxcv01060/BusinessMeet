<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.ToolBarStyle">
        <item name="actionMenuTextColor">@color/colorAlmostBlack</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="searchBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/search_radius</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:shape">rectangle</item>
    </style>

    <style name="search_icon">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/ic_search_black_512dp_toolbar</item>
    </style>

    <style name="search_text">
        <item name="android:text">Search</item>
        <item name="android:textColor">@color/colorAlmostBlack</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">26dp</item>
    </style>

    <style name="search_cancel">
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:src">@drawable/ic_cancel_16dp</item>
    </style>

    <style name="search_back">
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/ic_back_16dp</item>
    </style>

    <style name="search_fill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:hint">Search</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:background">@drawable/search_radius</item>
    </style>

    <!-- Button. -->
    <style name="button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <!-- Profile basic information title. -->
    <style name="friends_profile_information_basic_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/grey_60</item>
    </style>

    <!-- Profile input. -->
    <style name="input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Profile memo information title. -->
    <style name="friends_profile_information_memo_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:textColor">@color/grey_60</item>
    </style>

</resources>